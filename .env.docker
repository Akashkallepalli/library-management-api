# Docker Environment Variables

# Application
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
CORS_ORIGIN=*

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=library_db
DB_USER=postgres
DB_PASSWORD=postgres123

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Business Rules
MAX_BORROW_LIMIT=3
LOAN_PERIOD_DAYS=14
OVERDUE_FINE_RATE=0.5
SUSPENSION_THRESHOLD=3

# PgAdmin
PGADMIN_EMAIL=admin@library.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined